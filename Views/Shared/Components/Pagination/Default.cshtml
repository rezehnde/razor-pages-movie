@model RazorPagesSample.ViewComponents.PaginationViewComponent
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<table>
    <tr>
        <td>
            <a href="@Model.PreviousPageUrl" asp-page="./Index"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@Model.CurrentFilter"
               asp-route-pageSize="@Model.PageSize"
               class="btn btn-primary @prevDisabled">
                Previous
            </a>
        </td>
        <td>
            <select asp-for="PageSize" class="form-control" id="PageSize">
                @for (var i = 1; i <= 5; i++)
                {
                    @if (i == Model.PageSize)
                    {
                        <option value="@i" selected>@i</option>
                    }
                    else
                    {
                        <option value="@i">@i</option>
                    }
                }
            </select>
        </td>
        <td>
            <a href="@Model.NextPageUrl" asp-page="./Index"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@Model.CurrentFilter"
               asp-route-pageSize="@Model.PageSize"
               class="btn btn-primary @nextDisabled">
                Next
            </a>
        </td>
    </tr>
</table>
@section Scripts {
    <script type="text/javascript">
$("#PageSize").change(function(){
    var v = $(this).val();
    window.location.href ="?sortOrder=@(Model.CurrentSort)&pageIndex=1&currentFilter=@(Model.CurrentFilter)&pageSize="+v;
    // window.location.href ="@Url.Action("Index","Movies")?sortOrder=@(Model.CurrentSort)&pageIndex=1&currentFilter=@(Model.CurrentFilter)&pageSize="+v;
});
    </script>
}